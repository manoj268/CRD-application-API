@model WebApplication4.Models.Input
@using WebApplication4.Models;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Input</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetSingleData">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pro" class="control-label"></label>
                <input asp-for="Pro" class="form-control" />
                <span asp-validation-for="Pro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@{ 
    if (ViewBag.s!=null)
    {

    <table class="table table-success border-0">
        <thead>
            <tr>
                <td>
                    id
                </td>
                <td>
                    petId
                </td>
                <td>
                    quantity
                </td>
                <td>
                    shipDate
                </td>
                <td>
                    status
                </td>
                <td>
                    complete
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>

                @foreach (var item in ViewBag.s)
                {
                    <td>
                        @item.id
                    </td>
                    <td>
                        @item.petId
                    </td>
                    <td>
                        @item.quantity
                    </td>
                    <td>
                        @item.shipDate
                    </td>
                    <td>
                        @item.status
                    </td>
                    <td>
                        @item.complete
                    </td>
                }
            </tr>
        </tbody>
    </table>
        }
            else if(ViewBag.g)
            {
                <h2>No Data Found</h2>
            }
    }

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
